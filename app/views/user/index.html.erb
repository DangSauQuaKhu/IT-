<!--- start --->
<center>
  <div class="container" id="Blogs">
    <% count = 0 %>
    <% @blogs.each do |blog| %>
      <% if count ==0%>
        <div class="card-deck">
         <div class="card" style="max-width: 350px">
               <img class="card-img-top" src=<%= user.avatar %> alt="Card image cap" height="250px">
            <div class="card-body">
             <h5 class="card-title">Name: <%= user.name %> </h5>
              <h5 class="card-title">Email: <%= user.email %> </h5>
                <h5 class="card-title">Age: <%= user.age %> </h5>
            </div>
            <div class="card-footer">
            <%= link_to "<span class='badge badge-pill badge-info'style=' background-color:red'>Read More</span>".html_safe,  user_show_url(user.id) %> <br>

              <small class="text-muted">
                created at <%= user.updated_at.strftime("%d-%m-%Y") %>
              </small>
            </div>
          </div>
          <% count += 1%>
        <% elsif  count  % 3 == 0%>
        </div>
        <br>
        <div class="card-deck">
        <div class="card" style="max-width: 350px">
               <img class="card-img-top" src=<%= user.avatar %> alt="Card image cap" height="250px">
            <div class="card-body">
             <h5 class="card-title">Name: <%= user.name %> </h5>
              <h5 class="card-title">Email: <%= user.email %> </h5>
                <h5 class="card-title">Age: <%= user.age %> </h5>
            </div>
            <div class="card-footer">
            <%= link_to "<span class='badge badge-pill badge-info'style=' background-color:red'>Read More</span>".html_safe,  user_show_url(user.id) %> <br>

              <small class="text-muted">
                created at <%= user.updated_at.strftime("%d-%m-%Y") %>
              </small>
            </div>
          </div>
          <% count += 1 %> <% else %>
          <!-- show formatted data -->
          <div class="card" style="max-width: 350px">
          <img class="card-img-top" src=<%= user.avatar %> alt="Card image cap" height="250px">
            <div class="card-body">
             <h5 class="card-title">Name: <%= user.name %> </h5>
              <h5 class="card-title">Email: <%= user.email %> </h5>
                <h5 class="card-title">Age: <%= user.age %> </h5>
            </div>
            <div class="card-footer">
            <%= link_to "<span class='badge badge-pill badge-info'style=' background-color:red'>Read More</span>".html_safe,  user_show_url(user.id) %> <br>

              <small class="text-muted">
                created at <%= user.updated_at.strftime("%d-%m-%Y") %>
              </small>
            </div>
           <% end %>
          </div>
          <% count += 1%>
        <% end %>
      <% end %>
    </div>
  </div>
</center>
